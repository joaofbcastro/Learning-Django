{
  "explorer.compactFolders": false,
  // Configura tamanho e família da fonte
  "editor.tabSize": 2,
  "editor.fontSize": 16,
  "editor.lineHeight": 24,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  // Aplica um sinal visual na esquerda da linha selecionada
  "editor.renderLineHighlight": "gutter",
  // Tamanho da fonte do terminal
  "terminal.integrated.fontSize": 14,
  // Define o terminal padrão do VSCode no Windows
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  // Define o tema dos ícones do explorador
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "OM Theme (Night Owl Italic)",
  // Adiciona a linguagem português ao Code Spell Checker
  "cSpell.language": "en,pt-BR",
  // Configurações das linguagens
  "[css]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  "[django-html]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  "editor.accessibilitySupport": "off",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "python.languageServer": "Pylance", 
  "python.testing.unittestEnabled": false, 
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [], 
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pylintArgs": [
    "--load-plugins=pylint_django",
    "--errors-only"
  ],
  "python.formatting.autopep8Args": ["--indent-size=4"],
  // "python.defaultInterpreterPath": ".venv/bin/python",
  "files.associations": {
    "*.js": "javascript",
    "*.jsx": "javascriptreact",
    "*.xml": "html",
    "*.svg": "html",
    "*.html": "html",
    "django-html": "html",
    "**/*.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/base_templates/**/*.html": "django-html",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "emmet.includeLanguages": {
    "django-html": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "tabnine.experimentalAutoImports": true
}